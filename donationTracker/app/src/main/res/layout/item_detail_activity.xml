<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".controller.ItemDetail">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="261dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        android:text="@string/short_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintEnd_toEndOf="@id/nameText"
        app:layout_constraintTop_toBottomOf="@id/nameText"/>

    <TextView
        android:id="@+id/priceText"
        android:layout_width="261dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        android:text="@string/item_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/value"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@id/priceText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceText" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="261dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        android:text="@string/long_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="354dp"
        android:layout_height="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="@id/descText"
        app:layout_constraintTop_toBottomOf="@+id/descText" />

    <TextView
        android:id="@+id/locText"
        android:layout_width="261dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        android:text="@string/location_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@id/locText"
        app:layout_constraintTop_toBottomOf="@id/locText" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        app:layout_constraintTop_toBottomOf="@id/location"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="388dp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@id/Category"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="419dp" />
</android.support.constraint.ConstraintLayout>